.item {
	position: relative;
	
	display: block;
	float: left;
	margin-right: 10px;
	margin-left: 10px;
	width: 300px;
	margin-bottom: 20px;

	background-color: #54656e;
}

.item__title {
	margin: 0;

	font-size: 36px;
	line-height: 17px;
	font-weight: 400;
	text-align: center;
	vertical-align: middle;
}

