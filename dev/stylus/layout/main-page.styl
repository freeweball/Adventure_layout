.main-page {
	width 320px;
	margin: 0;
	margin-left: auto;
	margin-right: auto;
	padding-top: 0;
	padding-bottom: 54px;

	background-color #eff2f7;
	
	@media (min-width: 768px) {
		width: 640px;
	}
	
	@media (min-width: 1300px) {
		width: 1280px;
	}
}

.main-page__list {
	width: 320px;
	display: inline-block;
	margin: 0;
	padding: 0;

	list-style: none;
		
	@media (min-width: 768px) {
		width 640px
	}
	
	@media (min-width: 1300px) {
		clear: both;
		width: 1280px;
		margin-left: auto;
		margin-right: auto;
		padding-left: 0;
	}
}