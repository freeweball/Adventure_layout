.header-main {
	padding-bottom: 12px;
	
	background-color: #282a2d;
}

.header-main__container {
	width 280px
	margin-left: auto;
	margin-right: auto;
	display: flex;
	
	@media (min-width: 768px) {
		width 640px
	}
	
	@media (min-width: 1300px) {
		width: 1280px;
	}
}

.header-main__logo {
	display: block;
	margin-top: 12px;
	margin-bottom: auto;
	margin-left: 18px;
}

.header-main__wrapper {
	padding-top: 25px;
	margin-left: 0;
	padding-left: 21px;
}

.header-main__logo-title {
	display: inline-block;
	margin-top: 0;

	font-size: 32px;
	font-weight: 400;
	line-height: 17px;
}

.header-main__logo-subtitle {
	margin: 0;

	font-family: "PT Sans", "Arial", sans-serif;
	color #5a5e62;
	font-size: 11px;
	font-weight: 400;
	line-height: 15px;
}