.nav-main {
	width 300px;
	margin: 0;
	margin-left: auto;
	margin-right: auto;

	background-color: #eff2f7;
		
	@media (min-width: 768px) {
		padding-top: 10px;
		padding-bottom: 24px;
		width 620px;
	}
	
	@media (min-width: 1300px) {
		width: 1280px;
		margin-left auto
		margin-right auto
		padding-left 10px
	}
}

.nav-main__item {
	@media (max-width: 767px) {
		width 100%
		text-align center
		margin-bottom 15px
	}
}
.nav-main__list {
		display: flex;
		flex-wrap: wrap
		margin: 0;
		padding 0
		padding-top: 10px;
		list-style: none;

	@media (min-width: 768px) {
		padding-top: 50px;
	}
}

.nav-main__item-link {
	display: block;
	height: 100%
	margin-right: 24px;

	font-family: "PT Sans", "Arial", sans-serif;	
	color: #9fa2a8;
	font-size: 12px;
	line-height: 16px;
	font-weight: 400;

	// letter-spacing: 0.7px;
	text-decoration: none;
	text-transform: uppercase;
}

.nav-main__item-link:active,
.nav-main__item-link:focus {
	color: #242526;
	font-weight: bold;
	border-bottom: 2px solid #242526;
	margin-bottom: -2px;
}